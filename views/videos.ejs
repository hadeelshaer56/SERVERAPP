<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>YouTube Favorites</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container py-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">YouTube Search + Favorites</h3>
    <form method="post" action="/logout">
      <button class="btn btn-outline-danger btn-sm" type="submit">Logout</button>
    </form>
  </div>

  <!-- SEARCH (TOP) -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="get" action="/videos" class="row g-2">
        <div class="col-12">
          <input class="form-control" name="q" value="<%= q %>" placeholder="Search YouTube..." />
        </div>
      </form>

      <% if (error) { %>
        <div class="alert alert-warning mt-3 mb-0"><%= error %></div>
      <% } %>
    </div>
  </div>

  <!-- RESULTS -->
  <% if (results && results.length) { %>
    <h5 class="mb-2">Results</h5>
    <div class="row g-3 mb-4">
      <% results.forEach(v => { %>
        <div class="col-md-6">
          <div class="card h-100">
            <div class="row g-0">
              <div class="col-4">
                <img src="<%= v.thumbnailUrl %>" class="img-fluid rounded-start" alt="thumb">
              </div>
              <div class="col-8">
                <div class="card-body">
                  <div class="fw-semibold"><%= v.title %></div>
                  <div class="text-muted small"><%= v.channelTitle %></div>

                  <form method="post" action="/videos/save" class="mt-2">
                    <input type="hidden" name="videoId" value="<%= v.videoId %>">
                    <input type="hidden" name="title" value="<%= v.title %>">
                    <input type="hidden" name="thumbnailUrl" value="<%= v.thumbnailUrl %>">
                    <input type="hidden" name="back" value="/videos?q=<%= encodeURIComponent(q) %>">
                    <button class="btn btn-success btn-sm" type="submit">Save to Favorites</button>
                    <a class="btn btn-outline-secondary btn-sm" target="_blank" rel="noreferrer"
                       href="https://www.youtube.com/watch?v=<%= v.videoId %>">Open</a>
                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- FAVORITES (BOTTOM) -->
  <h5 class="mb-2">My Favorites</h5>
  <div class="card">
    <div class="card-body">
      <% if (!favorites || !favorites.length) { %>
        <p class="text-muted m-0">No favorites yet.</p>
      <% } else { %>
        <div class="list-group">
          <% favorites.forEach(f => { %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              <div class="d-flex gap-3 align-items-center">
                <img src="<%= f.thumbnailUrl %>" width="90" class="rounded" alt="thumb">
                <div>
                  <div class="fw-semibold"><%= f.title %></div>
                  <a target="_blank" rel="noreferrer" class="small"
                     href="https://www.youtube.com/watch?v=<%= f.videoId %>">
                    open on youtube
                  </a>
                </div>
              </div>

              <form method="post" action="/videos/delete">
                <input type="hidden" name="id" value="<%= f.id %>">
                <input type="hidden" name="back" value="/videos?q=<%= encodeURIComponent(q) %>">
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
              </form>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

</div>
</body>
</html>